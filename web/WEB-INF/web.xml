<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <!-- General description of your web application -->
    <display-name>Animals Sounds Servlet</display-name>
    <description>
      Animal Sounds Servlet provides animal sounds. Built as a real
      Java Servlet without Spring or other frameworks like that.
    </description>

    <servlet>
      <servlet-name>SoundServlet</servlet-name>
      <description>
        This servlet produces animal sounds.
      </description>
      <servlet-class>fi.hel.lib.kirjakaapeli.mace.coursera.mobilecloud.animalsounds.AnimalSoundsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>SoundServlet</servlet-name>
      <url-pattern>/sound</url-pattern>
    </servlet-mapping>
</web-app>
